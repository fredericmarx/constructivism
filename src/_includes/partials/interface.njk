<div class="sidebar js-only">
  <div class="interface">
    <div class="controls js-controls hidden">
      <label
        class="range-slider"
      >
        <p class="range-slider__caption">Number of Shapes</p>
        <input
          name="density"
          type="range"
          class="range-slider__input"
          min="1"
          max="16"
          step="1"
        >
      </label>
      <label
        class="range-slider"
      >
        <p class="range-slider__caption">Color</p>
        <input
          name="brightness"
          type="range"
          class="range-slider__input"
          min="0"
          max="1"
          step="0.05"
        >
      </label>
      <label
        class="range-slider"
      >
        <p class="range-slider__caption">Minimum Length</p>
        <input
          name="minWidth"
          type="range"
          class="range-slider__input"
          min="0"
          max="1"
          step="0.1"
        >
      </label>
      <label
        class="range-slider"
      >
        <p class="range-slider__caption">Maximum Length</p>
        <input
          name="maxWidth"
          type="range"
          class="range-slider__input"
          min="0"
          max="1"
          step="0.1"
        >
      </label>
          <label
        class="range-slider"
      >
        <p class="range-slider__caption">Minimum Width</p>
        <input
          name="minHeight"
          type="range"
          class="range-slider__input"
          min="0"
          max="1"
          step="0.1"
        >
      </label>
      <label
        class="range-slider"
      >
        <p class="range-slider__caption">Maximum Width</p>
        <input
          name="maxHeight"
          type="range"
          class="range-slider__input"
          min="0"
          max="1"
          step="0.1"
        >
      </label>
      <label
        class="range-slider"
      >
        <p class="range-slider__caption">Orientation</p>
        <input
          name="orientation"
          type="range"
          class="range-slider__input"
          min="0"
          max="1"
          step="0.0025"
        >
      </label>
    </div>
  </div>
  <div class="buttons">
    <label
      class="range-slider"
    >
      <p class="range-slider__caption">Variation</p>
      <input
        name="variation"
        type="range"
        class="range-slider__input"
        min="0"
        max="1"
        step="0.05"
      >
    </label>
    <div class="editor-buttons">
      <button class="js-controls-toggle w-100">Expand Editor</button>
      <button class="js-generate-button w-100 md">Regenerate Construction</button>
    </div>
  </div>
  <div class="bottom">
    <p class="red">Save Construction as PDF</p>
    <div class="button-grid">
      <button class="js-a4-button button-outline">Download A4</button>
      <button class="js-a2-button button-outline">Download A2</button>
    </div>
  </div>
</div>


