<div class="interface">
  <div class="controls js-controls hidden">
    <label
      class="range-slider"
    >
      <p class="range-slider__caption">Orientation</p>
      <input
        name="orientation"
        type="range"
        class="range-slider__input"
        min="0"
        max="1"
        step="0.0025"
      >
    </label>
    <label
      class="range-slider"
    >
      <p class="range-slider__caption">Number of Shapes</p>
      <input
        name="density"
        type="range"
        class="range-slider__input"
        min="0"
        max="1"
        step="0.05"
      >
    </label>
    <label
      class="range-slider"
    >
      <p class="range-slider__caption">Color</p>
      <input
        name="brightness"
        type="range"
        class="range-slider__input"
        min="0"
        max="1"
        step="0.05"
      >
    </label>
    <label
      class="range-slider"
    >
      <p class="range-slider__caption">Minimum Length</p>
      <input
        name="minWidth"
        type="range"
        class="range-slider__input"
        min="0"
        max="1"
        step="0.1"
      >
    </label>
    <label
      class="range-slider"
    >
      <p class="range-slider__caption">Maximum Length</p>
      <input
        name="maxWidth"
        type="range"
        class="range-slider__input"
        min="0"
        max="1"
        step="0.1"
      >
    </label>
        <label
      class="range-slider"
    >
      <p class="range-slider__caption">Minimum Width</p>
      <input
        name="minHeight"
        type="range"
        class="range-slider__input"
        min="0"
        max="1"
        step="0.1"
      >
    </label>
    <label
      class="range-slider"
    >
      <p class="range-slider__caption">Maximum Width</p>
      <input
        name="maxHeight"
        type="range"
        class="range-slider__input"
        min="0"
        max="1"
        step="0.1"
      >
    </label>
  </div>
</div>
<div class="buttons">
  <label
    class="range-slider"
  >
    <p class="range-slider__caption">Iteration</p>
    <input
      name="variation"
      type="range"
      class="range-slider__input"
      min="0"
      max="1"
      step="0.05"
    >
  </label>
  <div class="button-grid">
    <button class="js-controls-toggle">Expand Editor</button>
    <button class="js-generate-button">Regenerate<span class="md"> artwork</span></button>
    <button class="js-save-button">Download<span class="md"> artwork</button>
  </div>
</div>
